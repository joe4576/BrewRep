// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  name          String
  isAdmin       Boolean       @default(false)
  uid           String
  tenants       Tenant[] 
}

model Tenant {
  id            String      @id @default(uuid())
  name          String
  dateCreated   DateTime    @default(now())
  users         User[]
}