// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String          @id @default(uuid())
  name              String
  isAdmin           Boolean         @default(false)
  uid               String
  tenantGroups      TenantGroup[]   @relation("TenantGroupToUser")
  ownedTenantGroups TenantGroup[]   @relation("OwnerTenantGroup")
}

model Tenant {
  id            String        @id @default(uuid())
  name          String
  tenantGroup   TenantGroup   @relation(fields: [tenantGroupId], references: [id])
  tenantGroupId String
  isDemo        Boolean       @default(false)
}

model TenantGroup {
  id        String    @id @default(uuid())
  name      String    @unique
  tenants   Tenant[]
  users     User[]    @relation("TenantGroupToUser")
  owner     User      @relation(name: "OwnerTenantGroup",  fields: [ownerId], references: [id])
  ownerId   String
}
